# Environment variables for Tor Relay
# Copy to .env and customize

# Relay identification
TOR_RELAY_NICKNAME=MyTorRelay
TOR_RELAY_CONTACT=admin@example.com

# Relay mode: middle, exit, or bridge
TOR_RELAY_MODE=middle

# Ports (if overriding docker-compose)
# TOR_RELAY_PORT=9001
# TOR_RELAY_DIR_PORT=9030

# Bandwidth limits (bytes per second)
# TOR_RELAY_BANDWIDTH_RATE=10485760
# TOR_RELAY_BANDWIDTH_BURST=20971520

# Log level: trace, debug, info, warn, error
# TOR_RELAY_LOG_LEVEL=info

# Remote server IP (for deployment scripts)
REMOTE_HOST=XXX.XXX.XXX.XXX
REMOTE_USER=root
